<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExpandedAnswer">



    <include layout="@layout/content_expanded_answer" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabShareEA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:outlineProvider="none"
        app:borderWidth="0dp"
        app:rippleColor="@color/colorPrimary"
        android:elevation="@dimen/_8sdp"

        android:backgroundTint="@color/coltranslucent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="70dp"

        android:src="@drawable/share" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPopUpEA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:outlineProvider="none"
        app:borderWidth="0dp"
        app:rippleColor="@color/colorPrimary"
        android:elevation="@dimen/_8sdp"

        android:backgroundTint="@color/coltranslucent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"

        android:src="@drawable/menublack" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPopUpCollEA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:rippleColor="@color/colorPrimary"

        android:backgroundTint="@color/colorPrimaryDark"

        app:borderWidth="0dp"
        android:visibility="gone"
        android:src="@drawable/collapse_white"/>


    <TextView
        android:id="@+id/txtFAQButtonEA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="90dp"
        android:layout_marginRight="70dp"
        android:text="FAQ"
        android:gravity="right"
        android:elevation="10dp"
        android:visibility="gone"
        android:textColor="#FFFFFF"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPopUpFAQminiEA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="80dp"
        android:layout_marginRight="24dp"
        android:backgroundTint="@color/colorPrimaryDark"
        app:rippleColor="@color/colorPrimary"
        app:fabSize="mini"
        app:borderWidth="0dp"
        android:visibility="gone"
        android:src="@drawable/faq"/>

    <TextView
        android:id="@+id/txtLogoutButtonEA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="130dp"
        android:layout_marginRight="70dp"
        android:text="Logout"
        android:gravity="right"
        android:elevation="10dp"
        android:visibility="gone"
        android:textColor="#FFFFFF"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPopUpLogOutminiEA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="120dp"
        android:layout_marginRight="24dp"
        app:rippleColor="@color/colorPrimary"
        android:backgroundTint="@color/colorPrimaryDark"
        app:fabSize="mini"
        app:borderWidth="0dp"
        android:visibility="gone"
        android:src="@drawable/logout"/>


    <View
        android:id="@+id/shade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryShadow"
        android:visibility="gone"/>

   <LinearLayout
       android:id="@+id/loutBadges"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center_vertical"
       android:orientation="vertical"
       android:background="@color/colorPrimary"
       android:visibility="gone"
       android:elevation="@dimen/_12sdp"
       >

       <TextView

           android:id="@+id/txtBadgeMessage"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="You earned THE SHOPKEEPER BADGE for reaching the 125 coin Level!"
           android:layout_gravity="center"
           android:textColor="@color/colorPrimaryDark"
           android:textStyle="bold"
           android:layout_marginLeft="@dimen/_20sdp"
           android:layout_marginRight="@dimen/_20sdp"
           android:layout_marginBottom="@dimen/_45sdp"
           android:visibility="visible"
           android:textSize="@dimen/_25sdp"
           android:fontFamily="@font/almendra_sc"
           android:gravity="center"

           />


    <ImageView
        android:id="@+id/imgBadgeAward"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_240sdp"
        app:srcCompat="@drawable/badgeblank"

        android:layout_gravity="center"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/txtBadgeMessageOld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 1"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:visibility="gone"
        android:textSize="@dimen/_20sdp"
        android:fontFamily="@font/almendra_sc"
        android:gravity="center"

        />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="bottom"
           android:layout_gravity="bottom"
           android:layout_marginLeft="@dimen/_12sdp"
           android:layout_marginBottom="@dimen/_10sdp"
           android:layout_marginTop="@dimen/_20sdp"

           >

           <ImageView
               android:id="@+id/imgFBbadgeAward"
               android:layout_width="@dimen/_20sdp"
               android:layout_height="@dimen/_20sdp"
               android:src="@drawable/facebooklogo"

               />

           <TextView
               android:id="@+id/txtFBask"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Share and RECIEVE 50 Coins!"
               android:fontFamily="@font/almendra_sc"
               android:textSize="@dimen/_12sdp"
               android:textStyle="bold"
               android:layout_marginLeft="@dimen/_5sdp"

               android:layout_gravity="center_vertical"

               />



       </LinearLayout>


   </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>