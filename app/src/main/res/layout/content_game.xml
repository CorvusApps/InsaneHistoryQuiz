<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Game"
    android:orientation="vertical"
    android:background="@drawable/wallbackground"

    tools:showIn="@layout/activity_game">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            app:srcCompat="@drawable/goldcoinsicon" />

        <TextView
            android:id="@+id/txtCoinCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_25sdp"
            android:fontFamily="@font/almendra_sc"
            />

        <ImageView
            android:id="@+id/imgHPstreak"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            app:srcCompat="@drawable/checkicon" />

        <TextView
            android:id="@+id/txtConStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:text="10"
            android:textStyle="bold"
            android:textSize="@dimen/_25sdp"
            android:fontFamily="@font/almendra_sc"

            />
        <ImageView
            android:id="@+id/imgHPTimer"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_marginLeft="@dimen/_70sdp"
            app:srcCompat="@drawable/hourglassone"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/imgHPTimer2"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_53sdp"
            app:srcCompat="@drawable/hourglasstwo"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/imgHPTimer3"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_70sdp"
            app:srcCompat="@drawable/hourglassthree"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/imgHPTimer4"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_70sdp"
            app:srcCompat="@drawable/hourglassfour"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/imgHPTimer5"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_70sdp"
            app:srcCompat="@drawable/hourglassfive"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="10"
            android:visibility="gone"
            android:textStyle="bold"
            android:textSize="@dimen/_25sdp"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/loutGameQuestion"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_300sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:background="@drawable/question"

        >

        <TextView
            android:id="@+id/txtGameQuestion"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_180sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/_15sdp"
            android:fontFamily="@font/almendra_sc"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:text="Question"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/loutGameAnswerDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center_vertical"
        android:visibility="gone"

        >

        <ImageView
            android:id="@+id/btnCorrect"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/yes"
            />

        <ImageView
            android:id="@+id/btnCorrectGlow"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:visibility="gone"

            android:scaleType="fitCenter"
            android:src="@drawable/yesglow"
            />

        <TextView
            android:id="@+id/txtGameAnswerDisplay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="16"
            android:gravity="center"
            android:paddingTop="@dimen/_17sdp"
            android:paddingBottom="@dimen/_17sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_5sdp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/almendra_sc"
            android:text="Answer"
            android:background="@drawable/answerbanner"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15sdp"


             />





        <ImageView
            android:id="@+id/btnWrong"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"

            android:scaleType="fitCenter"
            android:src="@drawable/no"
             />

        <ImageView
            android:id="@+id/btnWrongGlow"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:src="@drawable/noglow"
            />


    </LinearLayout>









</LinearLayout>