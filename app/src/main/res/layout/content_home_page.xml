<?xml version="1.0" encoding="utf-8"?>
<LinearLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loutHomePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wallbackground"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_16sdp"
        android:background="@drawable/beveledbackground"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"

        android:background="@drawable/beveledbackground"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            app:srcCompat="@drawable/goldcoinsicon" />

        <TextView
            android:id="@+id/hpTxtCoinCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_marginLeft="@dimen/_2sdp"
            android:fontFamily="@font/almendra_sc"
            android:textStyle="bold"
            android:textSize="@dimen/_25sdp"
            />

        <ImageView
            android:id="@+id/imgHPstreak"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            app:srcCompat="@drawable/checkicon" />

        <TextView
            android:id="@+id/hpTxtConStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:text="10"
            android:fontFamily="@font/almendra_sc"
            android:textStyle="bold"
            android:textSize="@dimen/_25sdp"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@color/colorPrimaryDark"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBadgeBonusHP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Badge Bonus Question!"
        android:fontFamily="@font/almendra_sc"
        android:backgroundTint="@color/colorPrimaryDark"
        app:cornerRadius="@dimen/_15sdp"
        android:elevation="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_18sdp"
        android:layout_marginLeft="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_175sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:outlineProvider="background"
        android:outlineAmbientShadowColor="@color/primaryDarkShadow"
        android:outlineSpotShadowColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="@dimen/_18sdp"
        app:icon="@drawable/xaaabadgeantiquity"
        app:iconSize="@dimen/_18sdp"
        app:rippleColor="@color/colorAccent"
        android:visibility="invisible"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


    <ImageView
        android:id="@+id/imgBtnAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:foreground="?android:attr/selectableItemBackground"
        android:visibility="gone"
        app:srcCompat="@drawable/play" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/loutButtons"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnProfile"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:scaleType="fitCenter"
            android:backgroundTint="@color/colorPrimary"
            app:srcCompat="@drawable/profile" />

        <ImageView
            android:id="@+id/btnProfileGlow"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:backgroundTint="@color/colorPrimary"
            app:srcCompat="@drawable/profileglow" />


        <ImageView
            android:id="@+id/btnPlayAgain"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:scaleType="fitCenter"
            android:visibility="visible"
            android:backgroundTint="@color/colorPrimary"
            app:srcCompat="@drawable/playlarge" />

        <ImageView
            android:id="@+id/btnPlayAgainGlow"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:backgroundTint="@color/colorPrimary"
            app:srcCompat="@drawable/playlargeglow" />

        <ImageView
            android:id="@+id/btnLeaders"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:scaleType="fitCenter"
            android:backgroundTint="@color/colorPrimary"
            app:srcCompat="@drawable/leaders" />

        <ImageView
            android:id="@+id/btnLeadersGlow"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:backgroundTint="@color/colorPrimary"
            app:srcCompat="@drawable/leadersglow" />





    </LinearLayout>


</LinearLayout>