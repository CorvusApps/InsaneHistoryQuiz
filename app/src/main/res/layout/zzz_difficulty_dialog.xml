<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/crdDifficulty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card:cardCornerRadius="@dimen/_30sdp"
    android:layout_gravity="center"
    android:backgroundTint="@color/colorPrimary"
    android:background="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:backgroundTint="@color/colorPrimary"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_marginTop="@dimen/_20sdp"
                >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Level"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/_23sdp"

                        android:visibility="visible"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="@font/almendra_sc"
                        android:gravity="center"
                        android:layout_weight="1"

                        />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Level"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/_20sdp"

                        android:layout_marginTop="@dimen/_20sdp"

                        android:visibility="invisible"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="@font/almendra_sc"
                        android:gravity="center"
                        android:layout_weight="4"
                        />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="5"

                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    >


                    <ImageView
                        android:id="@+id/imgLevel1"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:src="@drawable/level1"

                        />

                    <ImageView
                        android:id="@+id/imgLevelGlow1"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:src="@drawable/levelglow1"
                        android:visibility="gone"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EASY BREAZY:"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:visibility="visible"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="@font/almendra_sc"
                        android:gravity="left"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5 coins / correct answer"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:visibility="visible"
                        android:textSize="@dimen/_10sdp"
                        android:fontFamily="@font/almendra_sc"
                        android:gravity="left"

                        />

                </LinearLayout>




            </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="5"

            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_25sdp"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                >


                <ImageView
                    android:id="@+id/imgLevel2"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/level2"

                    />

                <ImageView
                    android:id="@+id/imgLevelGlow2"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/levelglow2"
                    android:visibility="gone"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:orientation="vertical"
                >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOT SO EASY:"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:visibility="visible"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/almendra_sc"
                android:gravity="left"

                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 coins / correct answer"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:visibility="visible"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/almendra_sc"
                android:gravity="left"

                />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="6"

            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_25sdp"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                >


                <ImageView
                    android:id="@+id/imgLevel3"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/level3"

                    />

                <ImageView
                    android:id="@+id/imgLevelGlow3"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/levelglow3"
                    android:visibility="gone"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:orientation="vertical"
                >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REALLY REALLY HARD:
"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:visibility="visible"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/almendra_sc"
                android:gravity="left"

                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15 coins / correct answer   AND    2x multiplier for correct answer streaks"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:visibility="visible"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/almendra_sc"
                android:gravity="left"

                />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="7"

            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_25sdp"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                >


                <ImageView
                    android:id="@+id/imgLevel4"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/level4"

                    />

                <ImageView
                    android:id="@+id/imgLevelGlow4"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/levelglow4"
                    android:visibility="gone"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:orientation="vertical"
                >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="YOU WILL HATE US:"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:visibility="visible"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/almendra_sc"
                android:gravity="left"

                />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20 coins / correct answer   AND   3x multiplier for correct answer streaks"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:visibility="visible"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/almendra_sc"
                    android:gravity="left"

                    />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:gravity="center_horizontal"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/almendra_sc"
            android:text="10 coin deduction for wrong answers regardless of level!"
            android:textStyle="bold"
            android:textColor="@color/red"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

    </LinearLayout>



</androidx.cardview.widget.CardView>