<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cardlist_item2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card:cardCornerRadius="@dimen/_30sdp"


    android:layout_gravity="center"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/colorAccent">

    <LinearLayout
        android:id="@+id/loutFBreminder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:visibility="visible"

        >

        <TextView

            android:id="@+id/txtRatingsAskMessage"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="Please rate us!  Help us get noticed! Tell us how to get better!"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:visibility="visible"
            android:textSize="@dimen/_20sdp"
            android:fontFamily="@font/almendra_sc"
            android:gravity="center"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            >


            <ImageView
                android:id="@+id/imgRatingAsk"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/googleplay"
                android:layout_marginBottom="@dimen/_5sdp"

                android:layout_gravity="center"
                android:visibility="visible"
                />

            <LinearLayout
                android:layout_width="@dimen/_160sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                >

                <Button
                    android:id="@+id/btnRatingMaybe"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:text="No - Maybe later"
                    android:textSize="@dimen/_7sdp"
                    />

                <Button
                    android:id="@+id/btnRatingNo"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:text="No - Don't ask again"
                    android:textSize="@dimen/_7sdp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    />


            </LinearLayout>

            <ImageView
                android:id="@+id/imgRatingAskNo"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/xmark"
                android:layout_marginBottom="@dimen/_5sdp"

                android:layout_gravity="center"
                android:visibility="invisible"
                />

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>